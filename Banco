def main():
    saldo = 1000
    transacoes = []
    numero_saques = 0
    LIMITE_SAQUES = 3
    LIMITE_VALOR = 500

    while True:
        opcao = exibir_menu()

        if opcao == "d":
            saldo = depositar(saldo, transacoes)

        elif opcao == "s":
            saldo, numero_saques = sacar(saldo, transacoes, numero_saques, LIMITE_SAQUES, LIMITE_VALOR)

        elif opcao == "e":
            exibir_extrato(saldo, transacoes)

        elif opcao == "q":
            print("üëã Obrigado por usar o sistema banc√°rio. At√© logo!")
            break

        else:
            print("Op√ß√£o inv√°lida, tente novamente.")


if __name__ == "__main__":
    main()



def exibir_menu():
    menu = """
    ================= MENU =================
    [d] Depositar
    [s] Sacar
    [e] Extrato
    [q] Sair
    => """
    return input(menu)


def depositar(saldo, transacoes):
    valor = float(input("Informe o valor do dep√≥sito: "))
    if valor > 0:
        saldo += valor
        transacoes.append(("Dep√≥sito", valor))
        print(f"Dep√≥sito de R$ {valor:.2f} realizado com sucesso!")
    else:
        print("Valor inv√°lido. Informe um valor positivo.")
    return saldo


def sacar(saldo, transacoes, numero_saques, LIMITE_SAQUES, LIMITE_VALOR):
    valor = float(input("Informe o valor do saque: "))

    if valor <= 0:
        print("Valor inv√°lido. Informe um valor positivo.")
    elif valor > saldo:
        print("Saldo insuficiente.")
    elif valor > LIMITE_VALOR:
        print(f"O valor m√°ximo por saque √© R$ {LIMITE_VALOR:.2f}.")
    elif numero_saques >= LIMITE_SAQUES:
        print("Limite de saques di√°rios atingido.")
    else:
        saldo -= valor
        transacoes.append(("Saque", valor))
        numero_saques += 1
        print(f"Saque de R$ {valor:.2f} realizado com sucesso!")
    
    return saldo, numero_saques


def exibir_extrato(saldo, transacoes):
    print("\n========== EXTRATO ==========")
    if not transacoes:
        print("N√£o foram realizadas movimenta√ß√µes.")
    else:
        for tipo, valor in transacoes:
            print(f"{tipo:<10} R$ {valor:.2f}")
    print(f"\nSaldo atual: R$ {saldo:.2f}")
    print("==============================\n")



